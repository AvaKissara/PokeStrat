<UserControl x:Class="PokeStat.Vues.Layout.NavigationBarUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeStat.Vues.Layout" xmlns:vuesmodeles="clr-namespace:PokeStat.VuesModeles" d:DataContext="{d:DesignInstance Type=vuesmodeles:AccueilVueModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Raleway" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Bouton de fermeture -->
            <Button Grid.Column="1" Width="30" Height="30" Background="Red" Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding CloseCommand}"/>

            <Button Content="" Command="{Binding AccueilPageCommand}" HorizontalAlignment="Right" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="18" Padding="20,7">
                <Button.Background>
                    <ImageBrush ImageSource="/PokeStat;component/ressources/home.png" Stretch="Fill"/>
                </Button.Background>
            </Button>

            <Button x:Name="btnGestionEquipe" Content="Mes Equipes" Command="{Binding GestionEquipeCommand}" HorizontalAlignment="Left" Margin="29,30,0,0" VerticalAlignment="Top" FontSize="18" Padding="20,7"/>
            <Button x:Name="btnGestionMatch" Content="Mes Matchs" Command="{Binding GestionMatchCommand}" HorizontalAlignment="Left" Margin="176,30,0,0" VerticalAlignment="Top" FontSize="18" Padding="20,7"/>
            <Button x:Name="btnGestionProfile" Content="Mon Profile" Command="{Binding GestionProfileCommand}" HorizontalAlignment="Left" Margin="320,30,0,0" VerticalAlignment="Top" FontSize="18" Padding="20,7"/>
        </Grid>
    </Grid>
</UserControl>
