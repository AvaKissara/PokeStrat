<Window x:Class="PokeStat.Vues.Authentification.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeStat.Vues.Authentification"
        mc:Ignorable="d"
        Title="Connexion" Height="450" Width="800">

    <Grid Background="#2D354D">
        <TextBlock Text="CONNEXION" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Raleway" FontSize="26" Padding="6,4" Foreground="White"/>
        <Label Content="Email:" FontFamily="Raleway" Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="226,120,0,0" VerticalAlignment="Top" />
        <TextBox Name="tbIdentifiant" HorizontalAlignment="Center" Margin="0,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200">
            <TextBox.Text>
                <Binding Path="Identifiant" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True" />
            </TextBox.Text>
        </TextBox>

    </Grid>
</Window>
