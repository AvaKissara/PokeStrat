<Page x:Class="PokeStat.Vues.CrudPokemon.CreePokemon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PokeStat.Vues.CrudPokemon" xmlns:vuesmodeles="clr-namespace:PokeStat.VuesModeles" d:DataContext="{d:DesignInstance Type=vuesmodeles:GestionPokemonVueModel}"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreePokemon">

    <Grid Background="#2D354D">

        <Grid>
            <TextBlock Text="AJOUTER UN POKÉMON" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Raleway" FontSize="26" Padding="6,4" Foreground="White"/>
            <Button Width="30" Height="30" Background="Red" Foreground="White" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding CloseCommand}" />
            <Button Name="btnAccueil" Content="Accueil" Command="{Binding AccueilPageCommand}" HorizontalAlignment="Left" Margin="40,16,0,0" VerticalAlignment="Top" FontFamily="Raleway" Background="#7B7B7E" Foreground="White" FontSize="18" Padding="20,7"/>

        </Grid>


        <Label Content="Image:" FontFamily="Raleway"  Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="69,100,0,0" VerticalAlignment="Top" />
        <MediaElement HorizontalAlignment="Left" Margin="170,100,0,0" VerticalAlignment="Top" Width="120" />

        <Label Content="Nom Français:" FontFamily="Raleway"  Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="69,150,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="170,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />

        <Label Content="Nom Anglais:" FontFamily="Raleway"  Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="69,200,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="170,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />

        <Label Content="Taille:" FontFamily="Raleway"  Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="69,250,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="170,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />

        <Label Content="Poids:" FontFamily="Raleway"  Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="69,300,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="170,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />

    </Grid>
</Page>
