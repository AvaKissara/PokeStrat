<Page x:Class="PokeStat.Vues.CrudType.GestionType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vuesmodeles="clr-namespace:PokeStat.VuesModeles"
      xmlns:local="clr-namespace:PokeStat.Utilitaires"
      d:DataContext="{d:DesignInstance Type=vuesmodeles:GestionTypeVueModel}"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GestionType">

    <Page.Resources>
        <!-- Convertisseur utilisé pour convertir DataRowView en MType -->
        <local:DataRowViewToMTypeConverter x:Key="DataRowViewToMTypeConverter" />
    </Page.Resources>

    <Grid Background="#2D354D">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Titre de la vue -->
            <TextBlock Grid.Column="0" Text="GESTION DES TYPES" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Raleway"  FontSize="24" Padding="6,4" Margin="0,16,0,0" Foreground="White"/>

            <!-- Bouton de fermeture -->
            <Button Grid.Column="1" Width="30" Height="30" Background="Red" Foreground="White" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding CloseCommand}"/>
        </Grid>

        <!-- Bouton Accueil -->
        <Button Name="btnAccueil" Content="Accueil" Command="{Binding AccueilPageCommand}" HorizontalAlignment="Left" Margin="40,16,0,0" VerticalAlignment="Top" Background="#7B7B7E" FontFamily="Raleway"  Foreground="White" FontSize="18" Padding="20,7"/>

        <!-- Grille de données -->
        <DataGrid ColumnWidth="*" ItemsSource="{Binding DtTypes, UpdateSourceTrigger=PropertyChanged}"
          SelectedItem="{Binding LigneSelection, Converter={StaticResource DataRowViewToMTypeConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          Margin="40,30,40,100" AutoGenerateColumns="True" Name="dataGridView" Background="White" FontFamily="Raleway" BorderBrush="#BDBDBD" BorderThickness="1" Height="500">

            <DataGrid.Resources>
                <!-- Style de cellule -->
                <Style TargetType="DataGridCell">
                    <Setter Property="TextBlock.FontFamily" Value="Raleway"/>
                    <Setter Property="TextBlock.FontSize" Value="16"/>
                    <Setter Property="TextBlock.Foreground" Value="Black"/>
                </Style>

                <!-- Style d'en-tête de colonne -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="TextBlock.FontFamily" Value="Raleway"/>
                    <Setter Property="TextBlock.FontSize" Value="18"/>
                    <Setter Property="TextBlock.Foreground" Value="White"/>
                    <Setter Property="Background" Value="#7B7B7E"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

        </DataGrid>

        <!-- Bouton Ajouter -->
        <Button Name="btnAdd" Content="Ajouter" Command="{Binding CreeTypeCommand}" HorizontalAlignment="Left" Margin="40,0,0,40" VerticalAlignment="Bottom" FontFamily="Raleway"  Background="#7B7B7E" Foreground="White" FontSize="18" Padding="20,7"/>

        <!-- Bouton Modifier -->
        <Button Name="btnUpd" Content="Modifier" Command="{Binding ModifieTypeCommand}" IsEnabled="{Binding IsSelectionne}" HorizontalAlignment="Center" Margin="40,0,0,40" FontFamily="Raleway" VerticalAlignment="Bottom" FontSize="18" Padding="20,7">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#7B7B7E" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </Button.Style>
        </Button>

        <Button Name="btnDel" Content="Supprimer" Command="{Binding EffaceTypeCommand}" IsEnabled="{Binding IsSelectionne}" HorizontalAlignment="Right" Margin="40,0,40,40" VerticalAlignment="Bottom" FontFamily="Raleway" FontSize="18" Padding="20,7">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#7B7B7E" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </Button.Style>
        </Button>

        <!-- Champ de texte pour l'id du type sélectionné -->
        <TextBox Text="{Binding LigneSelection.idType}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="300,10,0,40" Background="#7B7B7E" Foreground="White" Width="40" Height="40" BorderBrush="Black" BorderThickness="1"/>
    </Grid>
</Page>
