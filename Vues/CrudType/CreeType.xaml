<Page x:Class="PokeStat.Vues.CrudType.CreeType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PokeStat.Vues.CrudType" xmlns:vuesmodeles="clr-namespace:PokeStat.VuesModeles" d:DataContext="{d:DesignInstance Type=vuesmodeles:GestionTypeVueModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreeType">

    <Grid>
        <TextBox Text="Ajouter un Type"  HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,16,0,0"/>
        <Label Content="Nom :" Foreground="DarkGray" HorizontalAlignment="Left" Margin="69,150,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbNomType" Text="{Binding NomType}" HorizontalAlignment="Left" Margin="170,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnValid" Content="Valider" Command="{Binding AjouteTypeCommand}" HorizontalAlignment="Left" Margin="0,391,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
